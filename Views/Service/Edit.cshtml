@model Accounting_System.Models.Services

@{
    ViewData["Title"] = "Edit Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Services</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" /><br />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1">%</span>
                <input asp-for="Percent" type="text" class="form-control" placeholder="Percentage" aria-label="Percentage" aria-describedby="basic-addon1" required><br />
            </div>
            <div class="input-group mb-3">
                <span asp-validation-for="Percent" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedBy" class="form-control" />
            <input type="hidden" asp-for="CreatedDate" class="form-control" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
