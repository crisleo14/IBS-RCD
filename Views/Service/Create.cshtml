@model Accounting_System.Models.Services

@{
    ViewData["Title"] = "Create Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center mb-4">Create a New Service</h1> <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div> <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Type of Service</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter the service type" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CurrentAndPreviousTitle" class="form-label">Current and Previous Title</label>
                    <select asp-for="CurrentAndPreviousId" asp-items="@Model.CurrentAndPreviousTitles" class="form-select js-select2" required>
                        <option value="">-- Select a title --</option>
                    </select>
                    <span asp-validation-for="CurrentAndPreviousTitle" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UnearnedTitle" class="form-label">Unearned Title</label>
                    <select asp-for="UnearnedId" asp-items="@Model.UnearnedTitles" class="form-select js-select2" required>
                        <option value="">-- Select a title --</option>
                    </select>
                    <span asp-validation-for="UnearnedTitle" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <span class="input-group-text" id="basic-addon1">%</span>
                    <input asp-for="Percent" type="text" class="form-control" placeholder="Percentage" aria-label="Percentage" aria-describedby="basic-addon1" required>
                    <span asp-validation-for="Percent" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
