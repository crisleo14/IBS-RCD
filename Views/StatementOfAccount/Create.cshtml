@model Accounting_System.Models.StatementOfAccount

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<partial name="_Notification">
<h4>Statement Of Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="CustomerId" class="control-label">Customer<span class="required">*</span></label>
                <select asp-for="CustomerId" class="form-control js-select2" asp-items="@Model.Customers" required>
                    <option></option>
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ServicesId" class="control-label">Particular<span class="required">*</span></label>
                <select asp-for="ServicesId" class="form-control js-select2" asp-items="@Model.Services">
                    <option></option>
                </select>
                <span asp-validation-for="ServicesId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Terms" class="control-label">Terms<span class="required">*</span></label>
                <select asp-for="Terms" class="form-select js-select2">
                <option value="" selected disabled>-- Select the Terms --</option>
                <option value="COD">COD</option>
                <option value="7D">7D</option>
                <option value="15D">15D</option>
                <option value="30D">30D</option>
                <option value="M15">M15</option>
                <option value="M30">M30</option>
                </select>
                <span asp-validation-for="Terms" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Discount" id="discount" type="text" class="form-control moneyInput" placeholder="Optional"/>
                <label for="discount" class="control-label">Discount</label>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Instructions" class="form-control" placeholder="Leave a instruction here" id="instructions" style="height: 100px"></textarea>
                <label for="instructions" class="control-label">Instructions</label>
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>
                <button type="button" class="btn btn-success mb-3" id="add-more">&dArr; Add Another</button>
                <button type="button" class="btn btn-danger mb-3 remove-period-amount">Remove</button>
                    <div id="period-amount-fields" class="row g-2">
                    <div class="col-sm mb-3">
                        <label asp-for="Period" class="control-label">Period<span class="required">*</span></label>
                        <input asp-for="Period" type="month" value="@DateTime.Now.ToString("yyyy-MM")" class="form-control" />
                        <span asp-validation-for="Period" class="text-danger"></span>
                    </div>
                    <div class="col-sm mb-3">
                        <label asp-for="Amount" class="control-label">Amount<span class="required">*</span></label>
                        <input asp-for="Amount" class="form-control moneyInput" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $("#add-more").click(function () {
            // Clone the existing period and amount fields
            var periodField = $("#period-amount-fields div:first-child").clone();
            var amountField = $("#period-amount-fields div:last-child").clone();

            // Set unique IDs for the cloned fields
            var uniqueId = new Date().getTime(); // Generate a unique timestamp-based ID
            $("input[type='month']", periodField).attr("id", "Period_" + uniqueId);
            $("input[type='text']", amountField).attr("id", "Amount_" + uniqueId);

            // Append the cloned fields to the container
            $("#period-amount-fields").append(periodField);
            $("#period-amount-fields").append(amountField);
        });
    </script>

        <script>
            $(document).on("click", ".remove-period-amount", function () {
                // Check if there is more than one pair of period and amount fields
                var fieldCount = $("#period-amount-fields div").length;

                if (fieldCount > 2) {
                    $("#period-amount-fields div:last-child").prev().remove(); // Remove the second-to-last field
                    $("#period-amount-fields div:last-child").remove(); // Remove the last field
                }

                console.log(fieldCount);
            });
        </script>


}

