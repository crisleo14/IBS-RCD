@model IEnumerable<Accounting_System.Models.StatementOfAccount>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var model = new StatementOfAccount();
}
<partial name="_Notification">
<h1>Statement of Account</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary rounded-3">Add New</a>
</p>
<table class="table" id="myOwnTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SOANo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SOANo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.Name)
            </td>
            <td>
                @if (item.CreatedBy == UserManager.GetUserName(User))
                {
                    if (!item.IsPosted && !item.IsVoided && !item.IsCanceled)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a>
                        <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#Preview-@item.Id" data-bs-url="@Url.Action($"Preview/{item.Id}")">
                            Preview
                        </button>
                        @await Html.PartialAsync("_PreviewPartialView",item)
                        <a class="btn btn-light" onclick="confirmPost(@item.Id)">Post</a>
                        <a class="btn btn-light" onclick="confirmCancel(@item.Id)">Cancel</a>
                    }
                    if (item.IsPosted && !item.IsVoided && !item.IsCanceled)
                    {
                        <a asp-action="Generate" asp-route-id="@item.Id" class="btn btn-light">Print</a>
                        if (item.AmountPaid == 0)
                        {
                            <a class="btn btn-light" onclick="confirmVoid(@item.Id)">Void</a>
                        }
                        else
                        {
                            <button class="btn btn-light" disabled readonly>Void</button>
                        }
                    }
                }

                @if (item.IsVoided)
                {
                    <span class="badge rounded-pill bg-danger ">VOIDED</span>
                }
                else if (item.IsCanceled)
                {
                    <span class="badge rounded-pill bg-warning ">CANCELED</span>
                }
                else
                {
                    @if (item.CreatedBy != UserManager.GetUserName(User))
                    {
                        <span class="badge rounded-pill bg-info ">VALID</span>
                    }
                }
            </td>
        </tr>
}
    </tbody>
</table>
    @section Scripts{
        <script>
            function confirmPost(id) {
                console.log(id);
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Replace with the actual URL that you want to redirect to
                        var url = `/StatementOfAccount/Post?id=${id}`;
                        window.location.href = url;
                    }
                })
            }
        </script>
        <script>
            function confirmVoid(id) {
                console.log(id);
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Replace with the actual URL that you want to redirect to
                        var url = `/StatementOfAccount/Void?id=${id}`;
                        window.location.href = url;
                    }
                })
            }
        </script>
        <script>
            function confirmCancel(id) {
                console.log(id);
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Replace with the actual URL that you want to redirect to
                        var url = `/StatementOfAccount/Cancel?id=${id}`;
                        window.location.href = url;
                    }
                })
            }
        </script>
    }
