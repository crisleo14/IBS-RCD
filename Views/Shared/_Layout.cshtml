<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Accounting_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Accounting_System.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet"> <!--Google fonts-->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.css" /><!--Data table pug-in-->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" /> <!--Select2 plugins-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <partial name="_Notification">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AAS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: darkgray !important">
                                Accounts Receivable
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="SalesInvoice" asp-action="Index">Sales Invoice</a></li>
                                <li><a class="dropdown-item" asp-controller="ServiceInvoice" asp-action="Index">Service Invoice</a></li>
                                <li><a class="dropdown-item" asp-controller="Receipt" asp-action="CollectionIndex">Collection Receipt</a></li>
                                <li><a class="dropdown-item" asp-controller="DebitMemo" asp-action="Index">Debit Memo</a></li>
                                <li><a class="dropdown-item" asp-controller="CreditMemo" asp-action="Index">Credit Memo</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: darkgray !important">
                                Accounts Payable
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="PurchaseOrder" asp-action="Index">Purchase Order</a></li>
                                <li><a class="dropdown-item" asp-controller="ReceivingReport" asp-action="Index">Receiving Report</a></li>
                                <li class="nav-item dropend">
                                    <a class="dropdown-item dropdown-toggle" asp-controller="CheckVoucher" asp-action="Index">
                                        Check Voucher
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="CheckVoucher" asp-action="Trade">Trade</a></li>
                                        <li class="nav-item dropend">
                                            <a class="dropdown-item dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" style="color: gray !important">
                                                Non-Trade
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" asp-controller="CheckVoucher" asp-action="NonTradeInvoicing">Invoicing</a></li>
                                                <li><a class="dropdown-item" asp-controller="CheckVoucher" asp-action="NonTradePayment">Payment</a></li>
                                            </ul>
                                        </li>

                                    </ul>
                                </li>
                                <li><a class="dropdown-item" asp-controller="JournalVoucher" asp-action="Index">Journal Voucher</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: darkgray !important">
                                Inventory
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="BeginningInventory">Beginning Inventory</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: darkgray !important">
                                Report
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="AuditTrail">Audit Trail Report</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="DisbursementBook">Cash Disbursement Book</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="CashReceiptBook">Cash Receipt Book</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="GeneralLedgerBook">General Ledger Book</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="InventoryBook">Inventory Book</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="JournalBook">Journal Book Report</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="PurchaseBook">Purchase Book</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="SalesBook">Sales Book</a></li>
                                <li><a class="dropdown-item" asp-controller="Report" asp-action="SummaryOfChartOfAccount">Chart Of Account Summary</a></li>
                                <li><a class="dropdown-item" asp-controller="Inventory" asp-action="InventoryReport">Inventory Report</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: darkgray !important">
                                Master File
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="Customer" asp-action="Index">Customers</a></li>
                                <li><a class="dropdown-item" asp-controller="Product" asp-action="Index">Products</a></li>
                                <li><a class="dropdown-item" asp-controller="Service" asp-action="Index">Services</a></li>
                                <li><a class="dropdown-item" asp-controller="Supplier" asp-action="Index">Suppliers</a></li>
                                <li><a class="dropdown-item" asp-controller="BankAccount" asp-action="Index">Bank Accounts</a></li>
                                <li><a class="dropdown-item" asp-controller="ChartOfAccount" asp-action="Index">Chart of Account</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Accounting_System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script><!--select 2 scripts-->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script><!--Sweet alert scripts-->
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.js"></script><!--Data table scripts-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
