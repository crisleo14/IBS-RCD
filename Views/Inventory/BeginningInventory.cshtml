@using Accounting_System.Models.ViewModels
@model BeginningInventoryViewModel

@{
    ViewData["Title"] = "Beginning Inventory";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">CREATE BEGINNING INVENTORY</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="Date" class="control-label">Date<span class="required">*</span></label>
                    <input type="date" asp-for="Date" class="form-control" required />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="ProductId" class="control-label">Product Name<span class="required">*</span></label>
                    <select asp-for="ProductId" class="form-control js-select2" asp-items="@Model.ProductList">
                        <option></option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Quantity" class="control-label">Quantity<span class="required">*</span></label>
                    <input asp-for="Quantity" class="form-control money" value="" placeholder="0.00" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Cost" class="control-label">Cost<span class="required">*</span></label>
                    <input asp-for="Cost" class="form-control money" value="" placeholder="0.00" />
                    <span asp-validation-for="Cost" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/submit-blocker.js"></script>
    <script>
        // Get the current date in the format "YYYY-MM-DD" (required for the date input)
        var currentDate = new Date().toISOString().slice(0, 10);

        // Set the default value of the input field
        document.getElementById("Date").value = currentDate;
    </script>
}


