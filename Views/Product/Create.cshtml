@using Accounting_System.Models.MasterFile
@model Product

@{
    ViewData["Title"] = "CREATE PRODUCT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="loader-container">
    <div class="loader"></div>
    <div class="loader-text">Loading...</div>
</div>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="ProductCode" class="form-control" placeholder="" />
                <label asp-for="ProductCode" class="control-label">Code<span class="required">*</span></label>
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ProductName" class="form-control" placeholder="" />
                <label asp-for="ProductName" class="control-label">Name<span class="required">*</span></label>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ProductUnit" class="form-control" placeholder="" />
                <label asp-for="ProductUnit" class="control-label">Unit<span class="required">*</span></label>
                <span asp-validation-for="ProductUnit" class="text-danger"></span>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
