@using Accounting_System.Models.AccountsReceivable
@model SalesInvoice

@{
    ViewData["Title"] = "Edit Sales Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Edit</h1>

<h4>SalesInvoice</h4>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="mb-3">
        <div class="row">
            <div class="col">
                <label asp-for="SINo" class="control-label"></label>
                <input asp-for="SINo" class="form-control" disabled readonly />
                <span asp-validation-for="SINo" class="text-danger"></span>

                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control" disabled readonly />

                <label asp-for="Customer.Name" class="control-label"></label>
                <input asp-for="Customer.Name" class="form-control" disabled readonly />

                <label asp-for="Customer.TinNo" class="control-label"></label>
                <input asp-for="Customer.TinNo" class="form-control" disabled readonly />

                <label asp-for="Customer.CustomerType" class="control-label"></label>
                <input asp-for="Customer.CustomerType" class="form-control" disabled readonly />

                <label asp-for="Customer.Address" class="control-label"></label>
                <input asp-for="Customer.Address" class="form-control" disabled readonly />

                <label asp-for="Customer.BusinessStyle" class="control-label"></label>
                <input asp-for="Customer.BusinessStyle" class="form-control" disabled readonly />

                <label asp-for="Customer.Terms" class="control-label"></label>
                <input asp-for="Customer.Terms" class="form-control" disabled readonly />
            </div>

            <div class="col">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" disabled readonly />

                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" id="productName" class="form-control" disabled readonly />

                <label asp-for="Product.Unit" class="control-label"></label>
                <input asp-for="Product.Unit" id="productUnit" class="form-control" disabled readonly />

                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control money" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>

                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control money" />
                <span asp-validation-for="Quantity" class="text-danger"></span>

                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control money" />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>

            @*   column 3 *@
            <div class="col">
                <label asp-for="TransactionDate" class="control-label"></label>
                <input type="date" asp-for="TransactionDate" class="form-control" />
                <span asp-validation-for="TransactionDate" class="text-danger"></span>

                <label asp-for="PoNo" class="control-label"></label>
                <input asp-for="PoNo" class="form-control" />
                <span asp-validation-for="PoNo" class="text-danger"></span>

                <label asp-for="OtherRefNo" class="control-label"></label>
                <input asp-for="OtherRefNo" class="form-control" />
                <span asp-validation-for="OtherRefNo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Remarks" class="control-label"></label>
        <textarea asp-for="Remarks" class="form-control" placeholder="Leave a remarks here" style="height: 100px"></textarea>
        <span asp-validation-for="Remarks" class="text-danger"></span>
    </div>
    <br />

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
