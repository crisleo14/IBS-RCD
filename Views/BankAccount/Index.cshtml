@model IEnumerable<Accounting_System.Models.BankAccount>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_Notification">
<h1>Bank Account Master File</h1>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-3">Create New</a>
</p>
<table class="table table-hover" id="myOwnTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AccountNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var data in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => data.AccountNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => data.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => data.Bank)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => data.Branch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => data.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => data.CreatedDate)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-light" asp-route-id="@data.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-light" asp-route-id="@data.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-light" asp-route-id="@data.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
