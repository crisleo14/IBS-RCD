@using Accounting_System.Models.MasterFile
@model BankAccount

@{
    ViewData["Title"] = "EDIT BANK ACCOUNT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="loader-container">
    <div class="loader"></div>
    <div class="loader-text">Loading...</div>
</div>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BankAccountId" value="@Model.BankAccountId"/>
            <div class="form-floating mb-3">
                <input asp-for="AccountName" class="form-control" placeholder=""/>
                <label asp-for="AccountName" class="control-label">Account Name<span class="required">*</span></label>
                <span asp-validation-for="AccountName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Bank" class="form-control" placeholder=""/>
                <label asp-for="Bank" class="control-label">Bank Code<span class="required">*</span></label>
                <span asp-validation-for="Bank" class="text-danger"></span>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Save</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="BankAccount" asp-action="Index"
                       class="btn btn-outline-primary border  form-control ">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

