@model IEnumerable<Accounting_System.Models.OfficialReceipt>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Official Receipt</h1>
<partial name="_Notification">
<p>
    <a asp-action="CreateOfficialReceipt" class="btn btn-primary rounded-3">Create New</a>
</p>
<table class="table table-hover" id="myTable">
    <thead>
        <tr class="text-primary">
            <th>
                @Html.DisplayNameFor(model => model.ORNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReferenceNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormOfPayment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ORNo)
                </td>
                <td>
                    @item.Date.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReferenceNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FormOfPayment)
                </td>
                <td>
                    @item.CheckDate.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CheckNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @*  <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a> | *@
                    <a asp-action="OfficialReceipt" asp-route-id="@item.Id" class="btn btn-light">Print</a> @* |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
