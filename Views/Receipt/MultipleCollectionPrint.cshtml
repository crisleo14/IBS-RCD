<div>
    <table class="table-bordered w-100">
        <tbody>
            <tr>
                <td colspan="2" style="padding-left:10px;">
                    Received from: &nbsp;
                    @Html.DisplayFor(model => model.Customer.Name)
                </td>
            </tr>
            <tr>
