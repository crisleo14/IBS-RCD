@using Accounting_System.Models.MasterFile
@model Supplier

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Supplier</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="" />
                <label asp-for="Name" class="control-label">Name</label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Address" class="form-control" placeholder="" />
                <label asp-for="Address" class="control-label">Address</label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="TinNo" class="form-control" placeholder="" />
                <label asp-for="TinNo" class="control-label">Tin No</label>
                <span asp-validation-for="TinNo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Terms" class="control-label">Terms</label>
                <select asp-for="Terms" class="form-select js-select2">
                    <option value="" selected disabled>-- Select the Terms --</option>
                    <option value="COD">COD</option>
                    <option value="7D">7D</option>
                    <option value="15D">15D</option>
                    <option value="30D">30D</option>
                    <option value="M15">M15</option>
                    <option value="M30">M30</option>
                </select>
                <span asp-validation-for="Terms" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="VatType" class="control-label">VAT Type</label>
                <div class="col">
                    <select asp-for="VatType" class="form-select js-select2">
                        <option value="" selected disabled>-- Select the Supplier VAT Type --</option>
                        <option value="Vatable">VATable</option>
                        <option value="Zero Rated">Zero Rated</option>
                        <option value="Exempt">Exempt</option>
                    </select>
                    <span asp-validation-for="VatType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TaxType" class="control-label">TAX Type</label>
                <div class="col">
                    <select asp-for="TaxType" class="form-select js-select2" onchange="toggleExemptionFields(this)" disabled readonly>
                        <option value="" selected disabled>-- Select the Supplier TAX Type --</option>
                        <option value="Withholding Tax">Withholding Tax</option>
                        <option value="Exempt">Exempt</option>
                    </select>
                    <span asp-validation-for="TaxType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group mb-3">
                @if (Model.ProofOfRegistrationFilePath != null)
                {
                    <h6>BIR Registration Form <span class="badge rounded-pill bg-success">&check;</span></h6>
                }
                else
                {
                    <label for="registration" class="form-label">Upload the proof of BIR registration<span class="required">*</span></label>
                    <input class="form-control form-control-sm" name="registration" type='file' required>
                    <span asp-validation-for="ProofOfRegistrationFilePath" class="text-danger"></span>
                }

            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
