@model Accounting_System.Models.ViewModels.HomePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row mb-5">
        <canvas id="myChart" style="width:100%;max-width:100%"></canvas>
    </div>
    <div class="row">
