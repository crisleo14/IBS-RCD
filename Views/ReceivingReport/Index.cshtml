@model IEnumerable<ReceivingReport>
@using Accounting_System.Models.AccountsPayable
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@{
    ViewData["Title"] = "Receiving Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Receiving Report</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-primary rounded-3"><i class="bi bi-plus-lg"></i> New</a>
</p>

<div class="table-responsive">
    <table class="table table-hover" id="myOwnTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RRNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PurchaseOrder.PONo)
                </th>
                <th>
                    Delivered
                </th>
                <th>
                    Received
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PurchaseOrder.CreatedBy)
                </th>
                <th>
                    Status
                </th>
                <th style="width:25%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RRNo)
                    </td>
                    <td>
                        @item.Date.ToString("MM/dd/yyyy")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseOrder.PONo)
                    </td>
                    <td>
                        @item.QuantityDelivered.ToString("N0")
                    </td>
                    <td>
                        @item.QuantityReceived.ToString("N0")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PurchaseOrder.CreatedBy)
                    </td>
                    <td>
                        @{
                        var status = item.IsPosted != null && item.VoidedBy == null && item.CanceledBy == null
                                ? "Posted"
                                : item.VoidedBy != null
                                    ? "Voided"
                                    : item.CanceledBy != null
                                        ? "Cancelled"
                                        : "Pending";
                        }
                        <span class="badge rounded-pill @if(status == "Posted") {<text>bg-info</text>} else if(status == "Voided") {<text>bg-danger</text>} else if(status == "Cancelled") {<text>bg-warning</text>}">@status</span>
                    </td>
                    <td class="text-center">
                        @if (!item.IsVoided && !item.IsCanceled)
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light">Edit</a>
                        }
                        @if (!item.IsPosted && !item.IsVoided && !item.IsCanceled)
                        {
                            <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#Preview-@item.Id" data-bs-url="@Url.Action($"Preview/{item.Id}")">
                                Preview
                            </button>
                            @await Html.PartialAsync("_PreviewPartialView", item)
                            <a class="btn btn-light" onclick="confirmPost(@item.Id)">Post</a>
                            <a class="btn btn-light" onclick="confirmCancel(@item.Id)">Cancel</a>
                        }
                        @if (item.IsPosted && !item.IsVoided && !item.IsCanceled)
                        {
                            <a asp-action="Print" asp-route-id="@item.Id" class="btn btn-light">Print</a>
                            if (item.AmountPaid == 0)
                            {
                                <a class="btn btn-light" onclick="confirmVoid(@item.Id)">Void</a>
                            }
                            else
                            {
                                <button class="btn btn-light" disabled readonly>Void</button>
                            }
                        }

                        @if (item.IsVoided)
                        {
                            <span class="badge rounded-pill bg-danger ">VOIDED</span>
                        }
                        else if (item.IsCanceled)
                        {
                            <span class="badge rounded-pill bg-warning ">CANCELLED</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        function confirmPost(id) {
            console.log(id);
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Replace with the actual URL that you want to redirect to
                    var url = `/ReceivingReport/Post?id=${id}`;
                    window.location.href = url;
                }
            })
        }
    </script>
    <script>
        function confirmVoid(id) {
            console.log(id);
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Replace with the actual URL that you want to redirect to
                    var url = `/ReceivingReport/Void?id=${id}`;
                    window.location.href = url;
                }
            })
        }
    </script>
    <script>
        function confirmCancel(id) {
            console.log(id);
            Swal.fire({
                title: "Please Input Remarks",
                html:
                    "<input id='cancellationRemarks' type='text' class='swal2-input' placeholder='Remarks'>",
                focusConfirm: false,
                allowEscapeKey: false,
                allowOutsideClick: false,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes'
            }).then((result) => {
                if (result.isConfirmed) {
                    var cancellationRemarks = $("#cancellationRemarks").val();
                    // Encode the cancellationRemarks to make it URL safe
                    var encodedRemarks = encodeURIComponent(cancellationRemarks);
                    // Append the encoded remarks as a parameter in the URL
                    var url = `/ReceivingReport/Cancel?id=${id}&cancellationRemarks=${encodedRemarks}`;
                    window.location.href = url;
                }
            })
        }
    </script>
}

