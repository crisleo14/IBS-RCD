@using Accounting_System.Models.AccountsPayable
@model ReceivingReport

@{
    ViewData["Title"] = "EDIT RECEIVING REPORT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="loader-container">
    <div class="loader"></div>
    <div class="loader-text">Loading...</div>
</div>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group mb-3">
                <label asp-for="Date" class="control-label">Date</label>
                <input asp-for="Date" type="date" class="form-control bg-light" readonly="@Model.IsPosted" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="POId" class="control-label">Suppliers PO No.</label>
                <select asp-for="POId" class="form-control js-select2" asp-items="@Model.PurchaseOrders" disabled="@Model.IsPosted" readonly="@Model.IsPosted"></select>
                <input type="hidden" asp-for="POId" />
            </div>
            <div class="form-floating mb-3">
                <input asp-for="ReceivedDate" type="date" class="@(Model.IsPosted ? "form-control bg-light" : "form-control")" placeholder="" readonly="@Model.IsPosted" />
                <label asp-for="ReceivedDate" class="control-label">Received Date</label>
                <span asp-validation-for="ReceivedDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SupplierInvoiceNumber" class="control-label"></label>
                <input asp-for="SupplierInvoiceNumber" class="form-control" />
                <span asp-validation-for="SupplierInvoiceNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="SupplierInvoiceDate" class="control-label"></label>
                <input asp-for="SupplierInvoiceDate" type="date" class="form-control" />
                <span asp-validation-for="SupplierInvoiceDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="TruckOrVessels" class="control-label">Truck/Vessels</label>
                <input asp-for="TruckOrVessels" class="form-control" />
                <span asp-validation-for="TruckOrVessels" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="QuantityDelivered" class="control-label">Qty Delivered</label>
                <input asp-for="QuantityDelivered" class="form-control" disabled="@Model.IsPosted" readonly="@Model.IsPosted" />
                <input type="hidden" asp-for="QuantityDelivered" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="QuantityReceived" class="control-label">Qty Received</label>
                <input asp-for="QuantityReceived" class="form-control" disabled="@Model.IsPosted" readonly="@Model.IsPosted" />
                <input type="hidden" asp-for="QuantityReceived" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="OtherRef" class="control-label"></label>
                <input asp-for="OtherRef" class="form-control" />
                <span asp-validation-for="OtherRef" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Remarks" class="control-label">Remarks</label>
                <textarea asp-for="Remarks" class="form-control" style="height: 100px"></textarea>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Save</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="ReceivingReport" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
