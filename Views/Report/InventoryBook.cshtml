@using Accounting_System.Models.ViewModels
@model ViewModelBook

@{
    ViewData["Title"] = "Inventory Book";
    var dateFrom = ViewBag.DateFrom;
    var dateTo = ViewBag.DateTo;
}

<h1>@ViewData["Title"]</h1>

<partial name="_Notification">

    <form id="dynamicForm" method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="DateTo" class="control-label"></label>
                    <input type="date" asp-for="DateTo" class="form-control" value="@dateTo" />
                    <span asp-validation-for="DateTo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn-primary" onclick="submitForm('InventoryBookReport')">Generate</button>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn-primary" onclick="submitForm('GenerateInventoryBookTxtFile')">Generate as .txt file</button>
                </div>
            </div>
        </div>
    </form>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
        <script>
            function submitForm(action) {
                var form = document.getElementById('dynamicForm');
                form.action = action;
                form.submit();
            }
        </script>
    }
