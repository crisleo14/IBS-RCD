@using Accounting_System.Models.ViewModels
@model ViewModelBook

@{
ViewData["Title"] = "Inventory Book";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 text-uppercase">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form id="dynamicForm" method="post">
            <div class="row">
                <div class="mb-3">
                    <label class="control-label">As Of</label>
                    <input type="date" asp-for="DateTo" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    <span asp-validation-for="DateTo" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="button" class="btn btn-primary form-control" onclick="submitForm('InventoryBookReport')"><i class="bi bi-printer"></i> Generate</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="button" class="btn btn-primary form-control" onclick="submitForm('GenerateInventoryBookTxtFile')"><i class="bi bi-file-text"></i> Generate as .txt file</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <button type="button" class="btn btn-primary form-control" onclick="submitForm('GenerateInventoryBookCsvFile')"><i class="bi bi-file-text"></i> Generate as .csv file</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function submitForm(action) {
            let form = document.getElementById('dynamicForm');
            form.action = action;
            form.submit();
        }
    </script>
}
