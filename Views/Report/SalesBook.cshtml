@model Accounting_System.Models.ViewModelBook

@{
    ViewData["Title"] = "Sales Book";
    var dateFrom = ViewBag.DateFrom;
    var dateTo = ViewBag.DateTo;
}

<h1>@ViewData["Title"]</h1>

<partial name="_Notification">

<form asp-action="SalesBookReport" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="mb-3">
                <label asp-for="DateFrom" class="control-label"></label>
                    <input type="date" asp-for="DateFrom" class="form-control" value="@dateFrom" />
                <span asp-validation-for="DateFrom" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateTo" class="control-label"></label>
                    <input type="date" asp-for="DateTo" class="form-control" value="@dateTo" />
                <span asp-validation-for="DateTo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="control-label">Select type of document(Optional)</label>
                <select name="selectedDocument" class="form-control js-select2">
                    <option value="" selected="Disabled">--Select an option--</option>
                    <option value="DueDate">Due Date</option>
                    <option value="SI">Sales Invoice</option>
                    <option value="SOA">Statement Of Account</option>
                </select>
            </div>
            <div class="form-group mb-3">
                <label class="control-label">Reports of transaction based on entries per SOA</label>
                <select name="soaList" class="form-control js-select2" asp-items="@Model.SOA">
                    <option></option>
                </select>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn-primary">Generate</button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}