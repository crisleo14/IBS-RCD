@using Accounting_System.Models.ViewModels
@model ViewModelBook

@{
    ViewData["Title"] = "Audit Trail Book";
    var dateFrom = ViewBag.DateFrom;
    var dateTo = ViewBag.DateTo;
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2 text-uppercase">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form id="dynamicForm" method="post">
            <div class="row">
                <div class="mb-3">
                    <label asp-for="DateFrom" class="control-label"></label>
                    <input type="date" asp-for="DateFrom" class="form-control" value="@dateFrom" />
                    <span asp-validation-for="DateFrom" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DateTo" class="control-label"></label>
                    <input type="date" asp-for="DateTo" class="form-control" value="@dateTo" />
                    <span asp-validation-for="DateTo" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="button" class="btn btn-primary" onclick="submitForm('AuditTrailReport')"><i class="bi bi-printer"></i> Generate</button>
                    <button type="button" class="btn btn-primary" onclick="submitForm('GenerateAuditTrailTxtFile')"><i class="bi bi-file-text"></i> Generate as .txt file</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function submitForm(action) {
            var form = document.getElementById('dynamicForm');
            form.action = action;
            form.submit();
        }
    </script>
}
