@using Accounting_System.Models.ViewModels
@model PurchaseChangePriceViewModel

@{
    ViewData["Title"] = "CREATE PURCHASE ORDER";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@ViewData["Title"]</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="ChangePrice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="POId" class="control-label">Suppliers PO No.</label><span class="required">*</span>
                <select asp-for="POId" class="form-control js-select2" asp-items="@Model.PO" style="width:100%">
                    <option></option>
                </select>
                <span asp-validation-for="POId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FinalPrice" class="control-label"></label><span class="required">*</span>
                <input asp-for="FinalPrice" class="form-control money" value="" placeholder="0.00" required />
                <span asp-validation-for="FinalPrice" class="text-danger"></span>
            </div>
            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="PurchaseOrder" asp-action="Index" class="btn btn-outline-primary border  form-control ">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/submit-blocker.js"></script>
    <script>
        // Get the current date in the format "YYYY-MM-DD" (required for the date input)
        var currentDate = new Date().toISOString().slice(0, 10);

        // Set the default value of the input field
        document.getElementById("Date").value = currentDate;
    </script>
}