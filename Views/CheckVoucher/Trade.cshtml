                    var netOfVat = rrAmount / 1.12;
                    var vat = netOfVat * 0.12;
                    var ewt = netOfVat * 0.01;
                    var rrAmountNetOfEWT = rrAmount - ewt;
                    totalNetOfEWT += rrAmountNetOfEWT;
                    totalEWT += ewt;
                    apTradePayable += rrAmount;
                } else {
